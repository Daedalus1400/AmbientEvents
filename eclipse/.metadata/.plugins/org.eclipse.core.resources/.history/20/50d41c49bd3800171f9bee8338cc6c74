package com.daedalus.ambientevents.actions;

import java.util.ArrayList;

import org.json.JSONObject;
import org.json.JSONArray;

import net.minecraft.entity.player.EntityPlayer;

public class MasterAction {

	ArrayList<CommonAction> actions;
	
	public MasterAction(JSONArray args) {
		for (int i = 0; i < args.length(); i++) {
			String type = args.getJSONObject(i).getString("type");
			if (type == "lightning") {
				
			}
		}
	}
	
	public void execute(EntityPlayer player) {
		
		for (int i = 0; i < actions.size(); i++) {
			actions.get(i).execute(player);
		}
	}
}
