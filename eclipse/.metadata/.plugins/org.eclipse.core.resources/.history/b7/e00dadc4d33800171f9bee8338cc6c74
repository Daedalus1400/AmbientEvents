package com.daedalus.ambientevents.conditions;

import org.json.*;

import net.minecraft.entity.player.EntityPlayer;

import com.daedalus.ambientevents.exceptions.*;

public class CommonCondition {
	
	public static CommonCondition newCondition(JSONObject args) throws Exception {
		// Factory method for creating new conditions from JSON based config
		CommonCondition output = null;
		
		String type = args.getString("type");
		
		if (type.equals("playerpos")) {
			output = new CommonCondition(args);
		} else if (type.equals("timeofday")) {
			output = new CommonCondition(args);
		} else {
			throw new UnknownTypeException("Unrecogized condition type: " + type);
		}
		
		return output;
	}
	
	public CommonCondition(JSONObject args) {}
	public CommonCondition() {}
	public boolean isMet(EntityPlayer player) {
		return false;
	}
}
