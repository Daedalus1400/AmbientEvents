package com.daedalus.ambientevents.conditions;

import org.json.JSONObject;

import net.minecraft.entity.player.EntityPlayer;

import com.daedalus.ambientevents.comparisons.*;

public class PlayerPosCondition extends CommonCondition {

	protected enum dim {x, y, z};
	protected dim dimension;
	protected CommonComparison compare;
	protected double compareValue;
	
	public PlayerPosCondition(JSONObject args) {
		
		if (args.getString("dimension").equals("x")) {
			dimension = dim.x;
		} else if (args.getString("dimension").equals("y")) {
			dimension = dim.y;
		} else if (args.getString("dimension").equals("z")) {
			dimension = dim.z;
		}
		
		compare = CommonComparison.newComparison(args.getString("comparison"));
		
		compareValue = args.getDouble("value");
	}
	
	@Override
	public boolean isMet(EntityPlayer player) {
		
		switch (dimension) {
			case x: 
		}
		
		return false;
	}
}
