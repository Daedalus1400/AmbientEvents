package com.daedalus.ambientevents.proxy;

import net.minecraft.entity.effect.EntityLightningBolt;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraftforge.event.entity.player.PlayerWakeUpEvent;
import net.minecraftforge.fml.common.eventhandler.SubscribeEvent;
import org.apache.logging.log4j.Level;
import org.apache.logging.log4j.Logger;

public class CommonEventHandlerProxy {

	protected EntityPlayer player;
	protected Logger logger;
	
	public void init(EntityPlayer playerIn, Logger loggerIn) {
		player = playerIn;
		logger = loggerIn;
	}
	
	@SubscribeEvent
	public void onWakeUp(PlayerWakeUpEvent e) {
		logger.log(Level.INFO, "Player Woke Up");
		player.world.addWeatherEffect(new EntityLightningBolt(player.world, player.posX, player.posY, player.posZ, true));
	}

}
