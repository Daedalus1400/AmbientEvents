package com.daedalus.ambientevents.conditions;

import java.util.ArrayList;

import org.json.JSONObject;

import net.minecraft.entity.player.EntityPlayer;

public class MasterCondition extends CommonCondition {
	
	ArrayList<CommonCondition> conditions;

	public MasterCondition(JSONObject args) {
		super(args);
	}
	
	@Override
	public boolean isMet(EntityPlayer player) {
		
		for (int i = 0; i < conditions.size(); i++) {
			if (!conditions.get(i).isMet(player)) {
				return false;
			}
		}
		
		return true;
	}
}
