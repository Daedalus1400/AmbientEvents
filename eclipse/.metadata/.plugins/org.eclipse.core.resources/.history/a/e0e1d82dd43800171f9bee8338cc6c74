package com.daedalus.ambientevents.actions;

import java.util.ArrayList;

import org.json.JSONObject;

import com.daedalus.ambientevents.AmbientEvents;
import com.daedalus.ambientevents.exceptions.UnknownTypeException;

import org.apache.logging.log4j.Level;
import org.json.JSONArray;

import net.minecraft.entity.player.EntityPlayer;

public class MasterAction {

	ArrayList<CommonAction> actions;
	
	public MasterAction(JSONArray args) throws Exception {
		for (int i = 0; i < args.length(); i++) {
			try {
				actions.add(CommonAction.newAction(args.getJSONObject(i)));
			} catch (UnknownTypeException e) {
				throw new UnknownTypeException(e);
			} catch (Exception e) {
				throw new Exception("Uknown error while parsing action!", e);
			}
		}
	}
	
	public void execute(EntityPlayer player) {
		for (int i = 0; i < actions.size(); i++) {
			actions.get(i).execute(player);
		}
	}
}
