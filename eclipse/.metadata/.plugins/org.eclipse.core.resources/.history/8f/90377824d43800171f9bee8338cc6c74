package com.daedalus.ambientevents.conditions;

import java.util.ArrayList;

import org.apache.logging.log4j.Level;
import org.json.JSONArray;
import org.json.JSONObject;

import net.minecraft.entity.player.EntityPlayer;

import com.daedalus.ambientevents.AmbientEvents;
import com.daedalus.ambientevents.exceptions.*;

public class MasterCondition {
	
	ArrayList<CommonCondition> conditions;

	public MasterCondition(JSONArray args) throws Exception {
		for (int i = 0; i < args.length(); i++) {
			try {
				conditions.add(CommonCondition.newCondition(args.getJSONObject(i)));
			} catch (UnknownTypeException e) {
				throw new UnknownTypeException(e);
			} catch (Exception e) {
				throw new Exception("Unknown error while parsing condition!", e);
			}
		}
	}
	
	public boolean isMet(EntityPlayer player) {
		
		for (int i = 0; i < conditions.size(); i++) {
			if (!conditions.get(i).isMet(player)) {
				return false;
			}
		}
		
		return true;
	}
}
