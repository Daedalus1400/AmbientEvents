package com.daedalus.ambientevents.actions;

import org.json.JSONObject;

import com.daedalus.ambientevents.exceptions.UnknownTypeException;

import net.minecraft.entity.player.EntityPlayer;

public class CommonAction {

	public static CommonAction newAction(JSONObject args) throws Exception {
		// Factory method for creating new actions from JSON based config
		CommonAction output = null;
		
		String type = args.getString("type");
		
		if (type.equalsIgnoreCase("lightning")) {
			output = new CommonAction(args);
			
		} else if (type.equalsIgnoreCase("potioneffect")) {
			output = new CommonAction(args);
			
		} else {
			throw new UnknownTypeException("Unrecogized action type: " + type);
		}
		
		return output;
	}
	
	public CommonAction(JSONObject args) {}
	public CommonAction() {}
	public void execute(EntityPlayer player) {}
}
